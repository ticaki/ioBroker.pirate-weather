{
    "i18n": true,
    "type": "panel",
    "items": {
        "apiToken": {
            "type": "text",
            "label": "apiToken",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "position": {
            "type": "coordinates",
            "label": "position",
            "autoInit": true,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "hours": {
            "type": "number",
            "label": "Hours-to-display",
            "default": 24,
            "min": 0,
            "max": 48,
            "unit": "hours",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "minutes": {
            "type": "checkbox",
            "label": "minute-by-minute",
            "default": false,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "units": {
            "type": "select",
            "label": "units",
            "options": [
                { "value": "us", "label": "US" },
                { "value": "si", "label": "SI" },
                { "value": "ca", "label": "CA" },
                { "value": "uk", "label": "UK" }
            ],
            "default": "si",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "pollInterval": {
            "type": "number",
            "label": "pollInterval",
            "default": 1,
            "min": 1,
            "max": 24,
            "unit": "hours",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        }
    }
}